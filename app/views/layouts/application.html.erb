<!DOCTYPE html>
<html>
<head>
  <title>Photocollider</title>
  <%= stylesheet_link_tag 'screen.css', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'print.css', :media => 'print' %>
  <!--[if lt IE 8]><%= stylesheet_link_tag 'ie.css', :media => 'screen, projection' %><![endif]-->
  <%= content_for :stylesheets %>
  
  <%= csrf_meta_tag %>
</head>
<body class="bp">
  <div class="container">
    <navigation>
      <%= link_to "Sign In", new_user_session_path unless user_signed_in? %>
      <%= link_to "Sign Out", destroy_user_session_path if user_signed_in? %>
    </navigation>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>
  </div>

  <%= javascript_include_tag "jquery-1.6.1" %>
  <%= content_for :javascript %>
  <%= javascript_tag do %>
    $(function() {
      <%= content_for :onready %>
    });
  <% end %>
</body>
</html>
